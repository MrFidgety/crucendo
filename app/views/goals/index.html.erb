<% provide(:title, "Wants") %>
<% content_for :control_menu do %>
  <div id="search-wants" class="custom-icon icon-group" data-toggle="modal" data-target="#search-wants-modal">
    <%= material_icon.search %>
  </div>
  <div id="new_goal_start" class="custom-icon icon-group material-lg">
    <%= material_icon.add %>
  </div>
<% end %>
<h1 class="page-title">
  <i class="fa fa-bullseye"></i><br>
  <small>Wants</small>
</h1>
<p class="title-helper">This is what you want to improve.</p>
<div id="active-goals" class="panel-group">
  <%= render(@goals) || render('goals/helpers/active') %>
</div>
<%= will_paginate @goals %>
<%= render 'goals/wants/new_want' %>
<%= render 'goals/wants/search' %>