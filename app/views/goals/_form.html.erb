<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for @goal, remote: remote do |f| %>
  <%= f.label :goal %>
  <%= f.text_field :content, class: 'form-control input-lg' %>
  <%= content_tag :div, id: 'due_date_container', class: 'collapse' do %>
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: 'form-control' %>
    <%= hidden_field_tag 'goal[due_date_utc]' %>
  <% end %>
  <%= hidden_field(:goal, :interaction_id) %>
  <%= button_tag fa_icon('calendar', text: 'Set due date'),  {   :type => 'button', 
                                        :class => "btn btn-default", 
                                        'data-target' => "#due_date_container", 
                                        'data-toggle' => "collapse"} %>
  <%= f.submit 'Create', 
        :data => {:disable_with => "Saving..."}, 
        class: 'btn btn-success pull-right' %>
<% end %>