<div class="modal fade" id="new_improvement_modal" tabindex="-1" role="dialog" 
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content have-modal">
      <div class="modal-header">
        <button type="button" class="modal-button-left close-icon" 
          data-dismiss="modal" aria-hidden="true">
          <%= material_icon.clear %>
        </button>
        <%= button_tag(type: 'submit', class: "modal-button-right custom-icon",
            form: 'new_improvement_form', 
            data: {disable_with: "<div class='loader'></div>".html_safe}) do %>
          <%= material_icon.done %>
        <% end %>
        <h4 class="modal-title">I Have</h4>
      </div>
      <div class="modal-body">
        <h3><%= goal.encrypted_goal %></h3>
        <%= form_tag improve_goal_path(goal), method: :post, 
          id: 'new_improvement_form' do %>
          <%= label_tag 'date', 'Set date of improvement. (optional)' %>
          <div class="input-group date">
            <span class="input-group-btn">
              <%= button_tag fa_icon('calendar'), type: 'button', 
                class: "btn btn-default btn-lg calendar-helper" %>
            </span>
            <%= date_field_tag :improvement_date, '', class: 'form-control input-lg' %>
            <%= hidden_field_tag 'improvement_date_utc' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>