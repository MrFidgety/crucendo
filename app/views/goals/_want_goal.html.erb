<div id="goal_<%= goal.id %>" 
  class="panel-group goal-panel new-goal">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="panel-title">
        <span class="pull-right">
          <%= fa_icon('bullseye') %>
        </span>
        <span class="goal_content"><%= goal.content %></span>
      </h3>
    </div>
    <div class="panel-body">
      <ul>
        <li>
          <%= fa_icon 'clock-o' %>
          <span>created <%= local_time_ago(goal.created_at) %></span>
        </li>
        <li>
          <% if @goal.completed? %>
            <%= fa_icon 'check' %> 
            <span>completed <%= local_time_ago(@goal.completed_date) %></span>
          <% elsif @goal.active? %>
            <%= fa_icon 'play' %> 
            <span>you are actively improving this want</span>
          <% else %>
            <%= fa_icon 'pause' %> 
            <span>you have put this want on hold</span>
          <% end %>
        </li>
        <li>
          <%= fa_icon 'trophy' %> 
          <% if goal.improvements.size > 0 %>
            <span>
              you have improved <%= pluralize(goal.improvements.size, 'time') %>
            </span>
          <% else %>
            <span>you are working toward your first improvement<span>
          <% end %>
        </li>
        <% if !goal.due_date.blank? %>
        <li>
          <%= fa_icon 'calendar' %> 
          <span>
            you want to achieve this by 
            <%= local_relative_time(goal.due_date, type: 'weekday-or-date') %>
          </span>
        <% end %>
        </li>
      </ul>
    </div>
    <div class="panel-footer">
      This is now part of your active wants. 
      It can be viewed and edited from your dashboard
    </div>
  </div>
</div>