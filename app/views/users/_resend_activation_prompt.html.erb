<div id="login_module">
  <div class="welcome-message">
    <%= @user.email %><br>
    <%= link_to fa_icon('pencil-square-o', text: 'change'), root_url %><br>
    <div class="welcome-spacing">
      Awesome! You've been here before. Once upon a time we sent you an email with
      an activation link. Cool story right?
    </div>
  </div>
  <%= form_tag sendemail_path, method: "post", remote: true do |f| %>
    <%= hidden_field(:session, :email, :value => @user.email) %>
    <%= button_tag(type: 'submit', class: "btn btn-orange btn-block btn-lg",
        data: {disable_with: "Sending email<div class='loader with-text'></div>".html_safe}) do %>
      Click here if the activation link has gone walkabout
    <% end %>
  <% end %>
</div>