<% provide(:title, "Haves") %>
<% provide(:navigation_heading, "Haves") %>
<% content_for :navigation_right do %>
  <div id="search-haves" 
    class="custom-icon icon-group <%= 'icon-active' if params.has_key?(:search) %>" 
    data-toggle="modal" data-target="#search-haves-modal">
    <%= material_icon.search %>
  </div>
  <div id="new_improvement_start" class="custom-icon icon-group material-lg">
    <%= material_icon.add %>
  </div>
<% end %>
<% if params.has_key?(:search) %>
<div class="search-params">
  <p>
    You are viewing filtered results.<br>
   <%= link_to improvements_path do %>
     <%= material_icon.autorenew %>
     Reset Search
    <% end %>
  </p>
</div>
<% end %>
<div id="improvements-container" class="panel-group">
  <%= render(@improvements, selectable: true) || render('improvements/helpers/all') %>
</div>
<%= will_paginate @improvements %>
<%= render 'goals/haves/new_have' %>
<%= render 'improvements/search' %>