<% provide(:title, "Haves") %>
<% content_for :control_menu do %>
  <div id="search-haves" class="custom-icon icon-group" data-toggle="modal" data-target="#search-haves-modal">
    <%= material_icon.search %>
  </div>
  <div id="new_improvement_start" class="custom-icon icon-group material-lg">
    <%= material_icon.add %>
  </div>
<% end %>
<h1 class="page-title">
  <i class="fa fa-trophy"></i><br>
  <small>Haves</small>
</h1>
<p class="title-helper">This is what you have improved.</p>
<div id="improvements-container" class="panel-group">
  <%= render(@improvements, selectable: true) || render('improvements/helpers/all') %>
</div>
<%= will_paginate @improvements %>
<%= render 'goals/haves/new_have' %>
<%= render 'improvements/search' %>