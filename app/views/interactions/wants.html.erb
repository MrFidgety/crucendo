<% title "Want" %>
<% content_for :navigation_left do %>
  <div class="control-menu pull-left">
  <%= link_to material_icon.keyboard_arrow_left, previous_wizard_path, 
      class: "custom-icon material-lg with-loader" %>
  </div>
<% end %>
<% content_for :navigation_right do %>
  <%= link_to material_icon.keyboard_arrow_right, next_wizard_path, 
      class: "custom-icon material-lg with-loader icon-pulse" %>
  </div>
<% end %>
<script>ga('send', 'event', 'Crucendo', 'Wants');</script>
<%= render 'interactions/header' %>
<p class="interaction-title">
  What do you want to improve?
  <span class="interaction-helper">This could be something new, something you're working on, or a goal you may have</span>
</p><hr>
<div class="input-group">
  <%= text_field_tag 'new_goal_text', nil, class: 'form-control input-lg', 
      placeholder: 'type what you want to improve...' %>
  <span class="input-group-btn">
    <button id="new_goal_start" class="btn btn-default btn-lg" type="submit">
       <%= fa_icon('plus', text: 'Add', right: true) %>
    </button>
  </span>
</div><br>
<div id="active-goals" class="panel-group">
  <%= render partial: "goals/interactions/want_goal", 
      collection: @goals, as: :goal %>
</div>
<%= render 'goals/wants/new_want', interaction: @interaction %>
<div class="modal fade" id="edit_goal_modal" tabindex="-1" role="dialog" 
  aria-hidden="true">
</div>