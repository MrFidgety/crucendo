<% provide(:title, "Want") %>
<%= render 'interactions/header' %>
<div class="crucial-container">
  What do you want to improve?
</div>
<div class="crucial-container">
  <div class="input-group">
    <%= text_field_tag 'new_goal_text', nil, :autofocus=>true, class: 'form-control', placeholder: 'Start typing here' %>
    <span class="input-group-btn">
      <button id="new_goal_start" class="btn btn-default" type="submit">
         <%= fa_icon('chevron-right') %>
      </button>
    </span>
  </div><br>
  <section id="goals-section">
    <%= render partial: "goals/want_goal", collection: @goals, as: :goal %>
  </section>
</div>
<div class="crucial-container">
  <%= link_to 'continue', next_wizard_path %>
</div>
<div class="modal fade" id="new_goal_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create new goal</h4>
      </div>
      <div class="modal-body">
        <%= render 'goals/form', modal: true %>
      </div>
    </div>
  </div>
</div>