<div id="interaction_<%= interaction.id %>" class="panel interaction-panel">
  <div class="panel-heading">
    <h3 class="panel-title">
      <span class="pull-right">View (Coming Soon)</span>
      Completed: <%= local_time_ago(interaction.updated_at) %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6">
        <ul class="list-group">
          <% interaction.answers.each do |answer| %>
            <li class="list-group-item">
              <%= answer.question.topic.name.camelize %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col-sm-6">
        <div class="row">
          <div class="col-xs-4">
            <p class="interaction-stats"><%=pluralize(interaction.improvements.size, 'improvement') %></p>
          </div>
          <div class="col-xs-4">
            <p class="interaction-stats"><%= pluralize(interaction.goals.size, 'want') %> created</p>
          </div>
          <div class="col-xs-4">
            <p class="interaction-stats">
              <span class="pluralize-number"><%= interaction.feeling %></span>
              <span class="pluralize-word">feeling</span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>