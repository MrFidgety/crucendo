<div class="modal fade" id="start-crucendo-modal" tabindex="-1" role="dialog" 
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content start-crucendo">
      <div class="modal-header">
        <button type="button" class="modal-button-left close-icon" 
          data-dismiss="modal" aria-hidden="true">
          <%= material_icon.clear %>
        </button>
        <%= button_to interactions_path, method: :get, class: "modal-button-right check-icon" do %>
          <%= material_icon.check %>
        <% end %>
        <h4 class="modal-title">Ready for Crucendo?</h4>
      </div>
      <div class="modal-body">
        <p><%= commence_crucendo_text %></p>
      </div>
    </div>
  </div>
</div>