<% 
  title "View Crucendo"
  provide(:page_class, "crucendo-show")
  provide(:navigation_heading, "View Crucendo")
%>
<p class="center-large">
  <%= link_to material_icon.keyboard_arrow_up, accomplishments_path %>
</p>
<h1 class="page-title light">
    Your <%= current_user.interactions
                .where("updated_at <= ?", @crucendo.updated_at)
                .size.ordinalize %> Crucendo
</h1>
<p class="title-helper">
  This was completed <%= when_did_it_happen(@crucendo.updated_at) %>
</p>
<% unless @crucendo.answers.blank? %>
  <h2 class="line-span green"><span>Answers</span></h2>
<% end %>
<section id="answers" class="panel-group">
  <%= render @crucendo.answers.order(:id) %>
</section>
<% unless @crucendo.improvements.blank? %>
  <h2 class="line-span green"><span>Haves</span></h2>
<% end %>
<section id="haves" class="panel-group">
  <%= render(partial: "improvements/improvement", 
    collection: @crucendo.improvements, 
    locals: {selectable: true}) %>
</section>
<% unless @crucendo.goals.blank? %>
  <h2 class="line-span green"><span>Wants</span></h2>
<% end %>
<section id="wants" class="panel-group">
  <%= render(partial: "goals/goal", collection: @crucendo.goals) %>
</section>
<section id="feeling">
  
</section>