<div id="topic_<%= topic.id %>" class="col-lg-3 col-md-4 col-sm-6">
  <div class="panel panel-default subscription-panel 
    <%="subscribed" if current_user.subscribed?(topic) %>">
    <%= link_to subscription_path(topic), 
          method: :patch, remote: true, class: "update-subscription" do %>
      <div class="panel-heading">
        <h4 class="panel-title"><%= topic.name.camelize %></h4>
      </div>
    <% end %>
    <div class="panel-body">
      <% unless topic.author.blank? %>
      <div class="row">
        <div class="col-xs-6 col-sm-12">
          <%= image_tag topic.author.logo.url, class: "img-responsive" if topic.author.logo? %>
        </div>
        <div class="col-xs-6 col-sm-12">
          <h4><small>Brought to you by</small><br><%= link_to topic.author.name, topic.author.link, target: '_blank' %></h4>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>