<% title "Admin Authors" %>
<% provide(:navigation_heading, "Admin Authors") %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Information</h3>
  </div>
  <div class="panel-body">
    <%= pluralize(@authors.size, 'Author') %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Actions</h3>
  </div>
  <div class="panel-body">
    <%= link_to fa_icon("plus", text: "New Author"), new_admin_author_path,
                            class: "btn btn-success btn-lg" %>
  </div>
</div>
<div id="authors-container" class="list-group">
  <%= render @authors %>
</div>
