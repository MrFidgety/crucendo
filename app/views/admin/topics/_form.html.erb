<%= form_for [:admin, @topic], html: { multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :author %>
  <%= f.text_field :author, class: 'form-control' %>
  <%= f.label :link %>
  <%= f.text_field :link, class: 'form-control' %>
  <%= f.label :image %>
  <div class="input-group">
    <label class="input-group-btn">
      <span class="btn btn-default">
        <%= fa_icon 'file-image-o' %> Browse ...<%= f.file_field :picture, 
                      accept: 'image/jpeg,image/gif,image/png',
                      class: "hidden_file" %>
      </span>
    </label>
    <input id="topic-picture-display" type="text" class="form-control" readonly>
  </div><br>
  <%= f.label :active %>
  <div class="btn-group btn-group-justified" role="group" data-toggle="buttons">
    <label class="btn btn-default">
      <%= f.radio_button :active, false %>No
		</label>
		<label class="btn btn-default">
			<%= f.radio_button :active, true %>Yes
		</label>
  </div>
  <%= f.label :default_subscription %>
  <div class="btn-group btn-group-justified" role="group" data-toggle="buttons">
    <label class="btn btn-default">
      <%= f.radio_button :default_subscription, false %>No
		</label>
		<label class="btn btn-default">
			<%= f.radio_button :default_subscription, true %>Yes
		</label>
  </div>
  <div class="btn-toolbar pull-right" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group" role="group">
      <%= link_to "Delete", admin_topic_path(@topic), 
            method: :delete,
            title: "Are you sure?", 
            data: {confirm: 'You may only delete a topic if
            it has no questions assigned.'},
            class: "btn btn-danger" unless @topic.id.blank? %>
    </div>
    <div class="btn-group" role="group">
      <%= f.submit yield(:button_text), class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('#topic_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
