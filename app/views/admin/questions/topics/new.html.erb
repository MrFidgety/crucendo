<% provide(:title, "New Topic") %>
<h1>New Topic</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @topic, :url => admin_questions_topics_path do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit "Create", class: "btn btn-success pull-right" %>
    <% end %>
  </div>
</div>