<% provide(:title, "Categories") %>
<h1>Categories</h1>
<div class="crucial-container">
  <%= link_to "Add Category", new_admin_questions_category_path,
                            class: "btn btn-primary" %>
</div>
<div class="crucial-container">
  <table class="table">
    <thead>
      <tr>
        <th>Category</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><span class="pull-right">
        <%= link_to "edit", edit_admin_questions_category_path(category) %></span>
      </td>
    </tr>
    <% end %>
  </table>
</div>