<header class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <% if content_for? :navigation_left %>
      <%= yield :navigation_left %>
      <div class="center-logo">
        <%= link_to root_url do %>
          <%= image_tag("crucendo_c_web.svg") %>
        <% end %>
      </div>
    <% else %>
    <div class="nav-button-left pull-left">
      <%= button_tag '', id: 'navigation-button',
          class: 'c-hamburger c-hamburger--htx toggle-panel' do %>
        <span></span>
      <% end %>
    </div>
    <div class="pull-left">
      <div class="crucendo-logo">
        <%= link_to root_url do %>
          <%= image_tag("crucendo_logo_web.svg") %>
        <% end %>
        <div class="beta-logo">beta</div>
      </div>
    </div>
    <% end %>
    <% if content_for? :control_menu %>
      <div class="pull-right control-menu">
        <%= yield :control_menu %>
      </div>
    <% end %>
  </div>
</header>